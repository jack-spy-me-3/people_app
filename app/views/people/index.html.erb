<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">
    <h1>Number of Awesome: {{ people.length }}</h1>
    <input ng-model="filterName">
    <input ng-model="filterBio">
    <div>
      <button ng-click="toggleOrder('name')">Order By Name</button>
      <button ng-click="toggleOrder('bio')">Order By Bio</button>
    </div>
    <div ng-repeat="person in people | filter: { name: filterName, bio: filterBio } | orderBy:orderAttribute:isDescending">
      <p ng-click="toggleBio(person)">{{ person.name }}</p>
       <p ng-class="{purpleHippo: person.bioVisible}">{{ person.bio }}</p>
      <button ng-click="killPerson(person)">Delete this Person</button>
    </div>
    <ul>
      <li ng-repeat="error in errors">{{ error }}</li>
    </ul>
    <p>Name: <input ng-model="inputName"></p>
    <p>Bio: <input ng-model="inputBio"></p>
    <button ng-click="addPerson(inputName, inputBio)">Add Person</button>
  </div>
</div>